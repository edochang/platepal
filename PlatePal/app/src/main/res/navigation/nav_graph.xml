<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/discoverFragment">

    <include app:graph="@navigation/create" />
    <include app:graph="@navigation/cookbook" />
    <include app:graph="@navigation/community" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.platepal.ui.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_search_to_one_post"
            app:destination="@id/onePostFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.platepal.ui.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.example.platepal.ui.InboxFragment"
        android:label="Inbox" />

    <fragment
        android:id="@+id/onePostFragment"
        android:name="com.example.platepal.ui.onepost.OnePostFragment"
        android:label="OnePost">
        <argument
            android:name="recipe"
            app:argType="com.example.platepal.data.RecipeMeta" />
    </fragment>

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.example.platepal.ui.DiscoverFragment"
        android:label="Home">
        <action
            android:id="@+id/action_discover_to_search"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_discover_to_one_post"
            app:destination="@id/onePostFragment" />
    </fragment>
</navigation>