<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/discover">

    <include app:graph="@navigation/discover"/>
    <include app:graph="@navigation/create"/>
    <include app:graph="@navigation/cookbook"/>
    <include app:graph="@navigation/community"/>


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.platepal.ui.SearchFragment"
        android:label="Search" >

        <argument
            android:name="hint"
            app:argType="string"
            android:defaultValue="Search Recipe..."
            />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.platepal.ui.ProfileFragment"
        android:label="Profile" >
    </fragment>

    <fragment
        android:id="@+id/inboxFragment"
        android:name="com.example.platepal.ui.InboxFragment"
        android:label="Inbox" >
    </fragment>

</navigation>